<!---------------HOME画面---------------->
<h3>users show</h3>
<h3><%= flash[:success] %></h3>
<!---------------user情報---------------->
 <%= render 'layouts/user_new', user: @user %>
 
<!---------------book投稿---------------->
 <%= render 'layouts/book_new', book: @book %>
  
<!---------------book一覧---------------->
  <div class="col-xs-9" style="background-color: white;"> 
    <h3>Books</h3>
      <table class = "table table-striped">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Body</th>
        </tr>
       <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag @user, :profile_image,  format: 'png',class: "img-circle pull-left profile-img", fallback: "no_image.jpg",size: "60x60" %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %><td>
        </tr>
       <% end %>
      </table>
  </div>
</div>